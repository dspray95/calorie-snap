<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/anim.Activity</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="anim.Activity" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>

</resources>
